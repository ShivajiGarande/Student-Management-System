@model IEnumerable<MyApp.Models.CourseModel>

@{
    ViewBag.Title = "DisplayCourse";
}

<br />
<br />
<br />
<h2 style="color: yellowgreen">All Courses</h2>
@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Add New Course", "Create")
    </p>
}

<table class="table table-bordered table-hover alert-success">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fees)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fees)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { CourseId = item.CourseId }, new { @class = "btn btn-success" })
                
                    @Html.ActionLink("Delete", "Delete", new { CourseId = item.CourseId }, new { @class = "btn btn-danger" })
                }
                @Html.ActionLink("Details", "Details", new { CourseId = item.CourseId }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
