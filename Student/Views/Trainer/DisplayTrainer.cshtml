@model IEnumerable<MyApp.Models.TrainerModel>

@{
    ViewBag.Title = "DisplayTrainer";
}
<br />
<br />
<br />
<h2 style="color: yellowgreen">All Trainers</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Add New Trainer", "Create")
    </p>
}
<table class="table table-bordered table-hover alert-success">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TrainerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Experience)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {

                    @Html.ActionLink("Edit", "Edit", new { TrainerId = item.TrainerId }, new { @class = "btn btn-success" })

                    @Html.ActionLink("Delete", "Delete", new { TrainerId = item.TrainerId }, new { @class = "btn btn-danger" })
                }
                @Html.ActionLink("Details", "Details", new { TrainerId = item.TrainerId }, new { @class = "btn btn-primary" }) 
            </td>
        </tr>
    }

</table>
